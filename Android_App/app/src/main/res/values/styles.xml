<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

    <!-- Customize your theme here. -->
        <item name="android:windowBackground">#4A96EE</item>
        <item name="android:colorBackground">#000000</item>

        <item name="colorPrimary">#3400EE</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comfortaa</item>

        <!-- Reference CustomActionBar style directly -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- Custom style for the ActionBar -->
    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <!-- Custom ActionBar style -->
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="customNavigationLayout">@layout/custom_toolbar</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Button1Style" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="ConnectionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="RegistrationButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#7EC694</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="HistoryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#D1E2F6</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="LiveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#3E5D81</item>
        <item name="android:textColor">@color/white</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="BLEButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#050A10</item>
        <item name="android:textColor">@color/white</item>

        android:outlineAmbientShadowColor="@color/amber"
        <!-- Add more customizations as needed -->
    </style>


</resources>
